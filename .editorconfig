# EditorConfig: https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
end_of_line = lf

[*.{ps1,cmd,bat}]
end_of_line = crlf

[*.{cs,csproj,sln}]
end_of_line = crlf
indent_size = 4

[*.{ts,tsx,js,jsx}]
indent_size = 2
end_of_line = lf

[Makefile]
indent_style = tab
